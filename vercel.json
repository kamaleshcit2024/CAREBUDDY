{
    "version": 2,
    "builds": [
        {
            "src": "api/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next",
            "config": {
                "zeroConfig": true
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "api/main.py"
        },
        {
            "source": "/(.*)",
            "destination": "frontend/$1"
        }
    ]
}